{
    "name": "nowo-tech/password-policy-bundle",
    "description": "Symfony bundle for password policy enforcements including password history, expiry, and validation",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": [
        "symfony",
        "bundle",
        "password",
        "policy",
        "security",
        "validation",
        "expiry",
        "history"
    ],
    "homepage": "https://github.com/nowo-tech/password-policy-bundle",
    "support": {
        "issues": "https://github.com/nowo-tech/password-policy-bundle/issues",
        "source": "https://github.com/nowo-tech/password-policy-bundle"
    },
    "authors": [
        {
            "name": "HÃ©ctor Franco Aceituno",
            "email": "hectorfranco@nowo.com",
            "homepage": "https://github.com/HecFranco",
            "role": "Developer"
        },
        {
            "name": "Nowo.tech",
            "homepage": "https://nowo.tech"
        }
    ],
    "require": {
        "php": ">=8.1 <8.6",
        "symfony/framework-bundle": "^6.0 || ^7.0 || ^8.0",
        "symfony/validator": "^6.0 || ^7.0 || ^8.0",
        "nesbot/carbon": "^3.9"
    },
    "require-dev": {
        "doctrine/collections": "^2.4",
        "doctrine/orm": "^2.15 || ^3.0",
        "doctrine/dbal": "^3.8 || ^4.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^10.0",
        "symfony/yaml": "^6.0 || ^7.0 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "Nowo\\PasswordPolicyBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nowo\\PasswordPolicyBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-clover coverage.xml",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "qa": [
            "@cs-check",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "test": "Run PHPUnit tests",
        "test-coverage": "Run PHPUnit tests with code coverage",
        "cs-check": "Check code style with PHP-CS-Fixer",
        "cs-fix": "Fix code style with PHP-CS-Fixer",
        "qa": "Run all quality assurance checks"
    }
}
