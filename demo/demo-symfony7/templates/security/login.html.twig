{% extends 'base.html.twig' %}

{% block title %}Login - Password Policy Demo{% endblock %}

{% block styles %}
    {{ parent() }}
    <style>
        .login-container {
            max-width: 500px;
            margin: 50px auto;
        }
        .login-form {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 8px;
            border: 1px solid #dee2e6;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #495057;
        }
        .form-group input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 16px;
        }
        .form-group input:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        .login-button {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            font-weight: bold;
        }
        .demo-credentials {
            background: #e7f3ff;
            border: 1px solid #b8daff;
            padding: 15px;
            border-radius: 4px;
            margin-top: 20px;
        }
        .demo-credentials h3 {
            margin-top: 0;
            font-size: 16px;
        }
        .demo-credentials ul {
            margin: 10px 0 0 20px;
            padding: 0;
        }
        .demo-credentials li {
            margin: 8px 0;
        }
        .demo-credentials code {
            background: #fff;
            padding: 2px 6px;
            border-radius: 3px;
            font-size: 14px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <h1 style="text-align: center; margin-bottom: 30px;">Login</h1>

        {% if error %}
            <div class="alert alert-danger">
                <div class="alert-title">Authentication Error</div>
                <div class="alert-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
        {% endif %}

        <div class="login-form">
            <form method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <button type="submit" class="btn login-button">Sign in</button>
            </form>
        </div>

        <div class="demo-credentials">
            <h3>ðŸ§ª Demo Credentials for Testing:</h3>
            <ul>
                <li><strong>expired@example.com</strong> / <code>expired123</code> - <span class="badge badge-danger">Password Expired</span> (will trigger expiry listener)</li>
                <li><strong>demo@example.com</strong> / <code>demo123</code> - <span class="badge badge-warning">Expiring Soon</span> (expires in 5 days)</li>
                <li><strong>admin@example.com</strong> / <code>admin123</code> - <span class="badge badge-success">Active</span></li>
            </ul>
            <p style="margin: 10px 0 0 0; font-size: 14px;"><strong>ðŸ’¡ Tip:</strong> After logging in with <strong>expired@example.com</strong>, navigate to the home page to see the password expiry listener in action!</p>
        </div>

    </div>
{% endblock %}

