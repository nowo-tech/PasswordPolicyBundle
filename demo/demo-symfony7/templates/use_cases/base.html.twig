{% extends 'base.html.twig' %}

{% block styles %}
    {{ parent() }}
    <style>
        .use-case-header {
            margin-bottom: 20px;
        }
        .use-case-content {
            margin-top: 20px;
        }
        .info-box {
            padding: 15px;
            border-radius: 4px;
            margin: 20px 0;
        }
        .info-box-success {
            background: #d4edda;
            border: 1px solid #c3e6cb;
        }
        .info-box-danger {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
        }
        .info-box-warning {
            background: #fff3cd;
            border: 1px solid #ffeeba;
        }
        .info-box-info {
            background: #e7f3ff;
            border: 1px solid #b8daff;
        }
        .config-box {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 4px;
            margin: 20px 0;
        }
        .route-list {
            list-style: none;
            padding: 0;
            margin: 10px 0;
        }
        .route-list li {
            padding: 5px 0;
        }
        .route-list code {
            background: #e9ecef;
            padding: 2px 6px;
            border-radius: 3px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="use-case-header">
        <h1>{% block use_case_title %}{% endblock %}</h1>
        <a href="{{ path('use_cases_index') }}" class="btn btn-secondary">‚Üê Back to Use Cases</a>
    </div>
    
    <div class="use-case-content">
        {% block use_case_content %}{% endblock %}
    </div>
{% endblock %}

