<a href="{{ path('user_show', {'id': user.id}) }}" class="btn">View</a>
<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
<a href="{{ path('user_change_password', {'id': user.id}) }}" class="btn btn-success">Change Password</a>
<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

