{% extends 'base.html.twig' %}

{% block title %}Users - Password Policy Demo{% endblock %}

{% block body %}
    {% set expiryDays = 90 %}
    {% set now = date('now') %}
    {% set expiredUsers = [] %}
    {% set expiringSoonUsers = [] %}
    {% for user in users %}
        {% if user.passwordChangedAt %}
            {% set passwordChangedAt = user.passwordChangedAt %}
            {% set expiresAt = passwordChangedAt|date_modify('+' ~ expiryDays ~ ' days') %}
            {% set daysRemaining = ((expiresAt.timestamp - now.timestamp) / 86400)|round %}
            {% if daysRemaining <= 0 %}
                {% set expiredUsers = expiredUsers|merge([user]) %}
            {% elseif daysRemaining <= 5 %}
                {% set expiringSoonUsers = expiringSoonUsers|merge([user]) %}
            {% endif %}
        {% endif %}
    {% endfor %}

    {% if expiredUsers|length > 0 %}
        <div class="password-expiry-banner alert-danger">
            <span>⚠️ <strong>{{ expiredUsers|length }}</strong> user{{ expiredUsers|length != 1 ? 's have' : ' has' }} expired password{{ expiredUsers|length != 1 ? 's' : '' }}. They need to change it immediately!</span>
        </div>
    {% elseif expiringSoonUsers|length > 0 %}
        <div class="password-expiry-banner alert-warning">
            <span>⚠️ <strong>{{ expiringSoonUsers|length }}</strong> user{{ expiringSoonUsers|length != 1 ? 's have' : ' has' }} password{{ expiringSoonUsers|length != 1 ? 's' : '' }} expiring in 5 days or less!</span>
        </div>
    {% endif %}

    <h1>
        <span>Users Management</span>
        <a href="{{ path('user_new') }}" class="btn btn-success">+ New User</a>
    </h1>

    {% block flash_messages %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
    {% endblock %}

    <a href="{{ path('demo_home') }}" class="btn btn-secondary">← Back to Home</a>

    <div class="password-expiry-info">
        <strong>ℹ️ Password Expiry Information:</strong>
        <ul style="margin: 10px 0 0 20px; padding: 0;">
            <li>Passwords expire after <strong>{{ expiryDays }} days</strong> from the last change date.</li>
            <li>Users with <span class="badge badge-danger">Expired</span> passwords need to change them immediately.</li>
            <li>Users with <span class="badge badge-warning">Expiring Soon</span> status have less than 5 days remaining.</li>
            <li>Click on any user to see detailed password expiry information and change their password.</li>
        </ul>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Password Changed At</th>
                <th>Status</th>
                <th>Password History</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% if user.passwordChangedAt %}
                            {{ user.passwordChangedAt|date('Y-m-d H:i:s') }}
                            <br>
                            {% set diff = date('now').timestamp - user.passwordChangedAt.timestamp %}
                            {% set days = (diff / 86400)|round %}
                            <small>({{ days }} day{{ days != 1 ? 's' : '' }} ago)</small>
                        {% else %}
                            <em>Never</em>
                        {% endif %}
                    </td>
                    <td>
                        {% include 'user/_password_status.html.twig' with {'user': user} %}
                        {% if user.passwordChangedAt %}
                            {% set passwordChangedAt = user.passwordChangedAt %}
                            {% set expiresAt = passwordChangedAt|date_modify('+' ~ expiryDays ~ ' days') %}
                            {% set daysRemaining = ((expiresAt.timestamp - now.timestamp) / 86400)|round %}
                            {% if daysRemaining <= 0 %}
                                <br><small style="color: #dc3545; font-weight: bold;">⚠️ Expired {{ (daysRemaining * -1) }} day{{ (daysRemaining * -1) != 1 ? 's' : '' }} ago</small>
                            {% elseif daysRemaining <= 5 %}
                                <br><small style="color: #856404; font-weight: bold;">⚠️ Expires in {{ daysRemaining }} day{{ daysRemaining != 1 ? 's' : '' }}</small>
                            {% elseif daysRemaining <= 15 %}
                                <br><small style="color: #004085;">ℹ️ Expires in {{ daysRemaining }} days</small>
                            {% else %}
                                <br><small style="color: #28a745;">✓ {{ daysRemaining }} days remaining</small>
                            {% endif %}
                        {% endif %}
                    </td>
                    <td>{{ user.passwordHistory|length }} entries</td>
                    <td>
                        {% include 'user/_user_actions.html.twig' with {'user': user} %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" style="text-align: center; padding: 40px;">
                        <em>No users found. <a href="{{ path('user_new') }}">Create the first user</a></em>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
