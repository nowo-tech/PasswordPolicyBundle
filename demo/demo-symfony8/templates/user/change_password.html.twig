{% extends 'base.html.twig' %}

{% block title %}Change Password - Password Policy Demo{% endblock %}

{% block styles %}
    {{ parent() }}
    <style>
        h1 {
            display: block;
        }
        .info-box {
            background: #e7f3ff;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Change Password for {{ user.email }}</h1>

    <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-secondary">‚Üê Back to User</a>

    <div class="info-box">
        <strong>Note:</strong> Changing the password will update the password history and reset the password expiry date.
    </div>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>

        {{ form_errors(form.plainPassword) }}

        <button type="submit" class="btn">Change Password</button>
    {{ form_end(form) }}
{% endblock %}
